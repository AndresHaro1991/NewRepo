<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS5v2.viewInsertar"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Ingreso" FontSize="Medium"  />
            <Entry x:Name="txtId" Placeholder="Ingrese el Id" Keyboard="Numeric"/>
            <Entry x:Name="txtNombres" Placeholder="Ingrese los Nombres" />
            <Entry x:Name="txtApellidos" Placeholder="Ingrese los Apellidos" />
            <Entry x:Name="txtCorreo" Placeholder="Ingrese el Correo" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario" />
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la Contrasena" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked" Grid.Row="0" Grid.Column="0"/>
            <Button x:Name="btnSalir" Text="Salir"Clicked="btnSalir_Clicked" Grid.Row="0" Grid.Column="1"

        </StackLayout>
    </ContentPage.Content>
</ContentPage>